{
  "rules": {
    "block-scoped-var": 1,
    "brace-style": [2, "1tbs", {
      "allowSingleLine": true
    }],
    "camelcase": 1,
    "comma-dangle": ["error", "never"],
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "comma-style": [2, "last"],
    "computed-property-spacing": [2, "never"],
    "consistent-this": [1, "_this"],
    "curly": [1, "multi-line"],
    "default-case": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "max-len": 0,
    "new-cap": 2,
    "no-alert": 0,
    "no-bitwise": 2,
    "no-console": 1,
    "no-eval": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces": 2,
    "no-nested-ternary": 2,
    "no-redeclare": 2,
    "no-unused-vars": 1,
    "quotes": [2, "single"],
    "semi": ["error", "never"],
    "space-before-function-paren": [2, "always"],
    "import/no-unresolved": [2, {
      "ignore": [".css"]
    }]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
